@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No clients have been added yet!</p>
}
else
{
  <h1>Clients</h1>
  <hr>
  <ul>
    @foreach (var client in Model)
    {
      <li>@client.GetName()</li>
    }
  </ul>
}
<form action="/clients/delete" method="post">
  <h4><a href="/clients/new">Add New</a> |
  <button class="btn" type="submit">Clear All</button></h4>
</form>
<hr>
<h4><a href="/">Return Home</a></h4>

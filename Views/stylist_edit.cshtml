@{
  Layout="Shared/_Layout.cshtml";
}
<h1>Edit Stylist</h1>
<hr>
<h2>Name: @Model.GetName()</h2>
<form action="/stylist/edit/@Model.GetId()" method="post">
    <div class="form-group">
        <input type="hidden" name="_method" value="PATCH">
        <input name="stylist-id" type="hidden" value="@Model.GetId()">
    </div>


  <div class="form-group">
      <label for="stylist-name">New Name: </label>
      <input id="stylist-name" name="stylist-name" type="text">
      <button class="btn" type="submit">Edit</button>
  </div>
</form>
<hr>
<h4><a href="/">Return Home</a></h4>
